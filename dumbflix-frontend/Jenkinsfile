def credential = 'Mejik'
def server = 'sgnd@192.168.3.174'
def dir = '~/test-ade/dumbflix-frontend'

pipeline{
    agent any
    stages{
        stage("Checkout Code") {
           steps {
               checkout scm
           }
       }
        stage('Pull test experimental'){
            when{
		    anyOf{
			branch "master";
			branch "production"
		    }
		}
            steps{
                sshagent([credential]){
                    sh """ssh -o StrictHostKeyChecking=no ${server} << EOF
                    cd ${dir}
                    git config --global user.email muhamaddestar5@gmail.com
                    git config --global user.name ademuh
                    git pull
                    exit
                    EOF"""
                    }
                }
            }
        }
    }
